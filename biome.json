{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"files": {
		"ignoreUnknown": true
	},
	"assist": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["dist"]
	},
	"formatter": {
		"enabled": true,
		"ignore": ["dist"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
