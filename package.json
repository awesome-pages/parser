{
	"name": "@awesome-pages/parser",
	"version": "1.0.0",
	"description": "A powerful parser for Awesome Lists that converts markdown to structured domain objects and generates various artifacts",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"keywords": [
		"awesome",
		"awesome-list",
		"parser",
		"markdown",
		"remark",
		"bookmarks",
		"sitemap",
		"rss",
		"json-feed",
		"search-index"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/awesome-pages/parser.git"
	},
	"bugs": {
		"url": "https://github.com/awesome-pages/parser/issues"
	},
	"homepage": "https://github.com/awesome-pages/parser#readme",
	"license": "MIT",
	"author": "Awesome Pages",
	"scripts": {
		"build": "tsup",
		"build:legacy": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
		"test": "vitest run",
		"dev:test": "vitest",
		"parse": "tsx src/cli.ts examples/awesome-click-and-use.md readme.domain.json",
		"generate:schema": "tsx generate-schema.ts > schemas/domain/v1.json",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"format:check": "biome format --check .",
		"usage": "npx tsx --tsconfig tsconfig.json src/api/usage.ts",
		"prepublishOnly": "pnpm run build"
	},
	"dependencies": {
		"@sindresorhus/slugify": "^2.2.1",
		"dotenv": "^16.3.1",
		"fast-glob": "^3.3.3",
		"franc-min": "^6.2.0",
		"hast-util-to-html": "^9.0.5",
		"json5": "^2.2.3",
		"mdast-util-to-hast": "^13.2.0",
		"node-fetch": "^3.3.2",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.0",
		"remark-parse": "^11.0.0",
		"stopwords-iso": "^1.1.0",
		"unified": "^11.0.4",
		"unist-util-visit": "^5.0.0",
		"zod": "^3.23.8",
		"zod-to-json-schema": "^3.24.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.1",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@types/hast": "^3.0.4",
		"@types/mdast": "^4.0.3",
		"@types/node": "^22.7.4",
		"@types/unist": "^3.0.3",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"msw": "^2.11.6",
		"semantic-release": "^25.0.2",
		"tsc-alias": "^1.8.16",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6",
		"typescript": "^5.6.3",
		"vfile": "^6.0.3",
		"vitest": "^2.1.3"
	}
}
