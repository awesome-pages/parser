{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://teles.dev.br/schemas/awesome-list/v1.json",
  "title": "Awesome List JSON (v1)",
  "type": "object",
  "required": ["schemaVersion", "meta", "sections"],
  "properties": {
    "schemaVersion": { "type": "integer", "enum": [1] },
    "meta": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "introHtml": { "type": ["string", "null"] },
        "generatedAt": { "type": "string", "format": "date-time" },
        "source": { "type": ["string", "null"] }
      },
      "additionalProperties": true
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "items"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "items": {
            "type": "array",
            "items": { "$ref": "#/$defs/item" }
          }
        }
      }
    }
  },
  "$defs": {
    "item": {
      "type": "object",
      "required": ["id", "title"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "url": { "type": ["string", "null"], "format": "uri" },
        "description": { "type": ["string", "null"] },
        "descriptionHtml": { "type": ["string", "null"] },
        "tags": { "type": "array", "items": { "type": "string" }, "default": [] }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
